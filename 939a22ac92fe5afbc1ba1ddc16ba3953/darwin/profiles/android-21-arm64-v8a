TOOLCHAINS_ROOT=/opt/toolchains/android-21-arm64-v8a
target_host=aarch64-linux-android
cc_compiler=clang
cxx_compiler=clang++

[settings]
compiler=clang
compiler.version=5.0
compiler.libcxx=c++_shared
os=Android
os_build=Linux
os.api_level=21
arch=armv8
arch_build=x86_64
build_type=Release

[env]
CONAN_CMAKE_FIND_ROOT_PATH=$TOOLCHAINS_ROOT/sysroot
ANDROID_STANDALONE_TOOLCHAIN=$TOOLCHAINS_ROOT
PATH=[$TOOLCHAINS_ROOT/bin]
SYSROOT=$TOOLCHAINS_ROOT/sysroot
ANDROID_ABI="arm64-v8a"
CHOST=$target_host
AR=$target_host-ar
AS=$target_host-as
RANLIB=$target_host-ranlib
NM=$target_host-nm
CC=$target_host-$cc_compiler
CXX=$target_host-$cxx_compiler
LD=$target_host-ld
STRIP=$target_host-strip
CFLAGS= -fPIE -fPIC -I$TOOLCHAINS_ROOT/include/c++/4.9.x
CXXFLAGS= -fPIE -fPIC -I$TOOLCHAINS_ROOT/include/c++/4.9.x
LDFLAGS= -pie
CPPFLAGS=-DANDROID -fPIC

[options]
