CVR_SDK_ROOT=/opt/toolchains/rk1108
target_host=arm-linux
standalone_toolchain=prebuilts/toolschain/usr
cc_compiler=gcc
cxx_compiler=g++

[settings]
os_build=Linux
arch_build=x86_64
os=Linux
arch=armv7
compiler=gcc
compiler.version=4.8
compiler.libcxx=libstdc++11
build_type=Release

[env]
CONAN_CMAKE_FIND_ROOT_PATH=$CVR_SDK_ROOT/$standalone_toolchain $CVR_SDK_ROOT/out/system
PATH=[$CVR_SDK_ROOT/$standalone_toolchain/bin]
CHOST=$target_host
AR=$target_host-ar
AS=$target_host-as
RANLIB=$target_host-ranlib
LD=$target_host-ld
STRIP=$target_host-strip
CC=$target_host-$cc_compiler
CXX=$target_host-$cxx_compiler
CXXFLAGS=-I"$CVR_SDK_ROOT/$standalone_toolchain/include"
CONAN_CMAKE_TOOLCHAIN_FILE=$CVR_SDK_ROOT/$standalone_toolchain/share/buildroot/toolchainfile.cmake
COMPILER_TYPE=RK1108
